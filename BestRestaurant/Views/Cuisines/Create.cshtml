@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Cuisine

<h4>Add a new cuisine</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", id="name"})
  <input type="submit" value="Add New Cuisine" class="btn btn-outline-success" />
}
<p>@Html.ActionLink("Show All Cuisines", "Index")</p>